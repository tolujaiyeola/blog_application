<h1><%= @post.title %></h1>

<% if @post.user.present? %>
  <p>Created By: <%= @post.user.name_display %><p>
<% end %>

<p><%= @post.body %></p>
<p>Tag : <%= @category.title %></p>

<p>Favourited: <%= @post.favourites.count %> times</p>
<%#<%= debug @favourite %>
<% if @favourite %>
  <%= link_to fa_icon("star 3x"), post_favourite_path(@post, @favourite), method: :delete %>
<% else %>
  <%= link_to fa_icon("star-o 3x"), post_favourites_path(@post), method: :post %>
<% end %>

<h3>Comments</h3>
<% @comments.each do |c| %>
<p><%= c.body %>
      <%= link_to "edit", edit_post_comment_path(@post,c) %>
      <%= link_to "delete", post_comment_path(@post,c), method: :delete, data: {confirm: "Delete post?"} %></p>
<% end %>

<strong>Add new comment below ..</strong>
<%= form_for [@post, @comment] do |f| %>
  <p><%= f.text_area :body %></p>
  <%= f.submit %>
<% end %>
